# =============================================================================
# Pulsar Configuration
# =============================================================================
# Copy this file to .env and update the values as needed.
# Never commit your .env file to version control.
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings (PUBLIC - safe to expose to client)
# -----------------------------------------------------------------------------
APP_NAME=Pulsar
APP_URL=http://localhost:3000
APP_DEBUG=false                   # Set to true for development
APP_TIMEZONE=UTC
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
NODE_ENV=development              # development, production, test
PORT=3000

# -----------------------------------------------------------------------------
# Feature Flags (PUBLIC - safe to expose to client)
# -----------------------------------------------------------------------------
FEATURE_DARK_MODE=true
FEATURE_ANALYTICS=true
FEATURE_PRICE_ALERTS=false
FEATURE_MULTI_WALLET=true
FEATURE_EXPORT_HISTORY=true

# -----------------------------------------------------------------------------
# Application Secrets (PRIVATE - server-only)
# -----------------------------------------------------------------------------
APP_KEY=                          # Generate: openssl rand -base64 32
SESSION_SECRET=                   # Generate: openssl rand -base64 32
JWT_SECRET=                       # Generate: openssl rand -base64 32

# -----------------------------------------------------------------------------
# Database Settings (PRIVATE - server-only)
# -----------------------------------------------------------------------------
DB_CONNECTION=sqlite              # sqlite, postgresql, mysql
DATABASE_URL="file:./prisma/data/pulsar.db"

# PostgreSQL specific (when DB_CONNECTION=postgresql)
# DB_HOST=127.0.0.1
# DB_PORT=5432
# DB_DATABASE=pulsar
# DB_USERNAME=root
# DB_PASSWORD=
# DB_SCHEMA=public

# MySQL specific (when DB_CONNECTION=mysql)
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=pulsar
# DB_USERNAME=root
# DB_PASSWORD=

# Prisma settings
PRISMA_LOG_LEVEL=warn            # query, info, warn, error
PRISMA_LOG_QUERIES=false

# -----------------------------------------------------------------------------
# Cache Settings (PRIVATE - server-only)
# -----------------------------------------------------------------------------
CACHE_DRIVER=memory              # memory, redis
CACHE_PREFIX=pulsar_cache_
CACHE_TTL=3600                   # Default TTL in seconds

# Memory cache
CACHE_MEMORY_MAX_SIZE=100

# Redis (when CACHE_DRIVER=redis)
# REDIS_URL=
# REDIS_HOST=127.0.0.1
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DATABASE=0

# -----------------------------------------------------------------------------
# Blockchain/Crypto Services (PRIVATE - server-only)
# -----------------------------------------------------------------------------
# CoinGecko API (for price data)
# COINGECKO_API_KEY=
# COINGECKO_BASE_URL=https://api.coingecko.com/api/v3

# Etherscan API (for Ethereum data)
# ETHERSCAN_API_KEY=
# ETHERSCAN_BASE_URL=https://api.etherscan.io/api

# Alchemy (Ethereum RPC provider)
# ALCHEMY_API_KEY=
# ALCHEMY_NETWORK=mainnet

# Infura (Ethereum RPC provider)
# INFURA_PROJECT_ID=
# INFURA_PROJECT_SECRET=

# -----------------------------------------------------------------------------
# Email Settings (PRIVATE - server-only)
# -----------------------------------------------------------------------------
MAIL_DRIVER=smtp
MAIL_HOST=localhost
MAIL_PORT=587
# MAIL_USERNAME=
# MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME=Pulsar
