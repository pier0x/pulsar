// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  runtime  = "nodejs"
}

datasource db {
  provider = "sqlite"
}

// User accounts for authentication
model User {
  id           String    @id @default(cuid())
  username     String    @unique
  passwordHash String
  avatarUrl    String?   // Random avatar from avatars.outpace.systems
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  sessions Session[]
  wallets  Wallet[]
}

// Database-backed sessions for long-lived auth
model Session {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt    DateTime
  createdAt    DateTime @default(now())
  lastActiveAt DateTime @default(now())

  @@index([userId])
  @@index([expiresAt])
}

// Key-value settings storage
model Setting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Blockchain wallet addresses for tracking crypto assets
model Wallet {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name      String?  // Optional friendly name
  network   String   // "bitcoin", "solana", "ethereum"
  address   String   // Blockchain wallet address
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  balance       Balance?
  tokenBalances TokenBalance[]

  @@unique([userId, address])
  @@index([userId])
}

// Native currency balance for a wallet (BTC, ETH, SOL)
model Balance {
  id        String   @id @default(cuid())
  walletId  String   @unique
  wallet    Wallet   @relation(fields: [walletId], references: [id], onDelete: Cascade)
  amount    String   // Store as string to handle big numbers (smallest unit)
  updatedAt DateTime @updatedAt
}

// Token metadata (ERC-20, SPL tokens)
model Token {
  id              String   @id @default(cuid())
  network         String   // "ethereum", "solana"
  contractAddress String   // Token contract/mint address
  symbol          String
  name            String
  decimals        Int
  logoUrl         String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  balances TokenBalance[]

  @@unique([network, contractAddress])
}

// Token balance per wallet
model TokenBalance {
  id        String   @id @default(cuid())
  walletId  String
  wallet    Wallet   @relation(fields: [walletId], references: [id], onDelete: Cascade)
  tokenId   String
  token     Token    @relation(fields: [tokenId], references: [id], onDelete: Cascade)
  amount    String   // String for big number precision (smallest unit)
  updatedAt DateTime @updatedAt

  @@unique([walletId, tokenId])
  @@index([walletId])
  @@index([tokenId])
}

// Track balance refresh job execution
model BalanceRefreshJob {
  id               String    @id @default(cuid())
  status           String    // "running", "completed", "failed"
  startedAt        DateTime  @default(now())
  completedAt      DateTime?
  walletsProcessed Int       @default(0)
  errors           String?   // JSON array of error messages
}
